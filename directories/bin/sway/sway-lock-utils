#!/usr/bin/env bash
# Maintained in linux-config.org
lock() {
    pidof swaylock || swaylock -f -i ~/Pictures/LockScreen/current -s fill -c 000000
    sway-notify "unlocked"
}

lock_gpg_clear() {
    [ "$1" = gpg_clear ] &&  (echo RELOADAGENT | gpg-connect-agent &>/dev/null )
    lock
}

case "$1" in
    lock)
        lock
        ;;
    lock_gpg_clear)
        lock_gpg_clear
        ;;
    logout)
        swaymsg exit
        ;;
    suspend)
        systemctl suspend
        ;;
    hibernate)
        systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    blank)
        sway-display disable
        [ -f "${HOME}/.screen-blank.local" ] && . "${HOME}/.screen-blank.local"
        ;;
    unblank)
        sway-display enable
        [ -f "${HOME}/.screen-unblank.local" ] && . "${HOME}/.screen-unblank.local"
        ;;
    *)
        lock
        ;;
esac

exit 0
