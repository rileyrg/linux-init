#!/usr/bin/env bash
#Maintained in linux-config.org
if [[ $# -eq 0 ]]; then
    dest="server";
    args="";
else
    dest="${@: -1}"
    args="${@:1:$#-1}"
fi
set -x
unison  -auto -terse ${args} -ignore 'Name {c/linux/linux-stable,thirdparty/emacs,.syncrclone/backups,.syncrclone/logs}' -prefer newer ~/cloud/ ssh://${dest}/cloud/
set +x
